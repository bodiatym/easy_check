<% provide :page_title, 'Test Assignment' %>

<div class="container text-center">  
  <h1><%= @test_assignment.test.name %></h1>
  <br>
</div>

<div class="form-group">
  <%= form_for(:assignee_answers,
                url: assignee_answers_path,
                method: :get,
                html: { role: 'form'}) do |f| %>
    <% @test_assignment.test.questions.each do |question| %><br>
        <strong><%= question.body %></strong>
        <% @assignee_answers.each do |assignee_answer| %>
        <label for="<%= "assignee_answers_value_#{answer_option.id}" %>"><%= assignee_answer.body %></label>
        <% end %>
    <% end %>
  <% end %>
  <%= params[:assignee_answer].inspect %>
</div>
