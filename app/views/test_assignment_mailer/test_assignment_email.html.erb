<body class="body-table">
  <table class="table-table" cellpadding="0" cellspacing="0">
    <tbody>
      <tr class="tr-table">
        <td class="td-table">
          <div class="div-6">
            <div class="div-5">
              <div class="div-4">
                <div class="div-3">
                  <div class="div-2">
                    <div class="div-1">
                      <table class="table-test" role="presentation" cellpadding="0" cellspacing="0" width="100%" border="0">
                        <tbody>
                          <tr>
                            <td class="td-text" align="left">
                              <div class="div-text">
                                <p class="p-text">Hi friend, we have a test for you.</p>
                                <p class="p-text">You will have exactly 1 hour to complete it.</p>
                                <p class="p-text">As soon as you follow the link, the countdown will begin</p>
                                <p class="p-text">Good luck.</p>
                              </div>
                            </td>
                          </tr>
                        </tbody>
                      </table>

                      <table class="table-test" role="presentation" cellpadding="0" cellspacing="0" width="100%" border="0">
                         <tbody>
                           <tr>
                             <td class="td-test" align="left">
                               <table>
                                 <tr>
                                   <td class="td-image" align="center">
                                     <%= image_tag(attachments['email.jpeg'].url) %>
                                   </td>
                                 </tr>
                               </table>
                             </td>
                           </tr>
                         </tbody>  
                       </table>

                       <table class="table-test" role="presentation" cellpadding="0" cellspacing="0" width="100%" border="0">
                         <tbody>
                           <tr>
                             <td class="td-test" align="left">
                               <div align="center">
                                 <a href="http://www.google.com" class="btn btn-test" type="button">Go to test</a>
                               </div>
                             </td>
                           </tr>
                         </tbody>  
                       </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</body>
