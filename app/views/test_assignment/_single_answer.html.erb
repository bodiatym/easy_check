<div class="row">
  <div class="col-md-6">
    <br>
    <div>
      <% @questions.each do |question| %>
      <h4>
        <strong>
          <%= @question.body %>
        </strong>
        <% @qustion.answers.each do |answer| %>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="<%= @answer.body %>" id="<%= @answer.id %>">
          <label class="form-check-label" for="<%= @answer.id %>">
            <%= @question.answers %>
          </label>
        </div>
        <% end %>
      </h4>
      <% end %>
    </div>
  </div>
</div>
