<table class="table table-bordered table-hover">
  <thead>
    <tr class="active" style="background-color: gray">
      <th>Name</th>
      <th>Type</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
    <tr>
      <td><%= question.body %></td>
      <td><%= question.answer_type %></td>
      <td>
        <%= link_to 'Show', question_path(question) %>
        <%= link_to 'Edit', edit_question_path(question) %>
        <%= link_to 'Remove', question_path(question), method: :delete, data: {confirm: 'Are you sure?'} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
