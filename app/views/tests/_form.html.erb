<h4>Add new Test</h4>
<%= form_with(model: current_user.tests.build, url: tests_path) do |form| %>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <%= form.label :name, value: 'Name' %>
  <%= form.text_area :name, class: 'form-control', rows: 1 %>
  
  <div class="d-flex justify-content-end mt-2">
    <%= form.button :Create, type: :submit, class: 'btn btn-info' %>
  </div>
<% end %>